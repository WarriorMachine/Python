from tkinter import *
from tkinter import filedialog
from itertools import cycle
import os
import time

main = Tk()
main.title("GraphicDir")
try:
    main.iconbitmap("icon.ico")
except:
    print("L'icone de la fenêtre principale n'a pas été chargée")
main.overrideredirect(1)
main.resizable(width=False, height=False)
large = main.winfo_screenwidth()
haut = main.winfo_screenheight()
sL = large/2-(1360/2)
sH = haut/2-(768/2)
screen_resolutionMain = str(round(large))+'x'+str(round(haut))+'+'+str(0)+'+'+str(0)
main.geometry(screen_resolutionMain)

counter = 1
def changer():
    global counter
    if counter == 1:
        counter = 0
        changeBut.configure(background='red')
    else:
        changeBut.configure(background='blue')
        counter = 1

changeBut = Button(main, text="change", command=changer)
changeBut.place(x=600, y=300, width=200, height=30)

main.mainloop()
